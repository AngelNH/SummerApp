<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_game_LinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityGame"
    android:background="@color/backgroundGameColor"
    android:weightSum="10"
    android:orientation="vertical"
    android:padding="15dp">
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/textGrid"
            android:text="2048"
            android:textSize="43sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/activity_game_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gridColor"
            android:text="SCORE\n0"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"/>


        <Button
            android:id="@+id/activity_game_best"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/gridColor"
            android:text="BEST\n0"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/instructionsGame"
            android:textSize="16dp"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/instr2Game"
            android:fontFamily="cursive"
            android:textSize="18dp"
            android:padding="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/activity_game_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startActGameBtn"
            android:textColor="@color/orangeTextColor"
            android:background="@color/backgroundGameColor"
            android:textSize="25dp"
            android:textAlignment="textStart"
            android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <TextView
            android:id="@+id/activity_game_GameOver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GAME OVER!"
            android:textSize="60dp"
            android:gravity="center"
            android:background="@color/colorGameOver"
            android:textColor="@android:color/holo_red_light"
            android:visibility="invisible"/>

        <GridLayout
            android:id="@+id/activity_game_GridLayout"
            android:layout_width="382dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:alignmentMode="alignMargins"
            android:background="@color/gridColor"
            android:columnCount="4"
            android:columnOrderPreserved="true"
            android:padding="14dp"
            android:rowCount="4"
            android:visibility="visible">

            <!-- ROW 1-->
            <Button
                android:id="@+id/game_0_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_0_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_0_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_0_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />


            <!-- ROW 2-->
            <Button
                android:id="@+id/game_1_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_1_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_1_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_1_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />


            <!-- ROW 3-->
            <Button
                android:id="@+id/game_2_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_2_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_2_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_2_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />


            <!-- ROW 2-->
            <Button
                android:id="@+id/game_3_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_3_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_3_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

            <Button
                android:id="@+id/game_3_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/btnColor"
                android:textSize="30dp" />

        </GridLayout>
    </FrameLayout>
</LinearLayout>